    table(cellspacing="0" cellpadding="0" style='width: 500px; border: 0; margin-left: auto; margin-right: auto')
      tr(style='background-color: #222;')
        td(width='63px')
          img(src='https://metadatabase.os2geo.dk/icon.png' style='display: block; width: 63px')
